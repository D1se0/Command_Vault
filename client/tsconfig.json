{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": [ "ES2022", "DOM", "DOM.Iterable" ],
    "module": "ESNext",
    "skipLibCheck": true,

    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    "jsx": "react-jsx",
    "types": [ "react", "react-dom" ],

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [ "src" ]
}
